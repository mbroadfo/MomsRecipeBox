{
  "database": {
    "name": "moms_recipe_box_dev",
    "host": "localhost",
    "port": 27017,
    "auth": {
      "username": "admin",
      "password": "supersecret",
      "authSource": "admin"
    },
    "containerName": "momsrecipebox-mongo"
  },
  "backup": {
    "rootPath": "./backups",
    "retention": {
      "full": 30,
      "incremental": 7,
      "archive": 365
    },
    "compression": true,
    "verification": true,
    "cloudSync": false,
    "schedule": {
      "fullBackup": {
        "enabled": true,
        "time": "02:00",
        "frequency": "daily"
      },
      "incrementalBackup": {
        "enabled": true,
        "interval": 4,
        "unit": "hours"
      },
      "archiveBackup": {
        "enabled": true,
        "dayOfWeek": "Sunday",
        "time": "01:00"
      },
      "cleanup": {
        "enabled": true,
        "time": "03:00",
        "frequency": "daily"
      }
    }
  },
  "monitoring": {
    "emailAlerts": {
      "enabled": false,
      "smtpServer": "",
      "smtpPort": 587,
      "username": "",
      "password": "",
      "fromAddress": "",
      "toAddresses": []
    },
    "healthChecks": {
      "enabled": true,
      "checkInterval": 5,
      "retentionDays": 30
    }
  },
  "cloud": {
    "provider": "aws-s3",
    "enabled": false,
    "bucket": "momsrecipebox-backups",
    "region": "us-east-1",
    "accessKey": "",
    "secretKey": "",
    "encryption": true
  }
}
